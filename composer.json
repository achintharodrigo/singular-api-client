{
    "name": "achintharodrigo/singular-api-client",
    "type": "library",
    "description": "Simple intergration for Singular",
    "keywords": [
        "achintharodrigo",
        "singular-api-client"
    ],
    "homepage": "https://github.com/achintharodrigo/singular-api-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Achintha Rodrigo",
            "email": "achintha@gmail.com",
            "homepage": "achintha.info",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AchinthaRodrigo\\SingularApiClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AchinthaRodrigo\\SingularApiClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "composer run check-style && composer run check-style-test",
        "csf": "composer run fix-style && composer run fix-style-test",
        "check-style": "phpcs src",
        "fix-style": "phpcbf src",
        "check-style-test": "phpcs tests --exclude=PSR1.Methods.CamelCapsMethodName, Generic.Files.LineLength",
        "fix-style-test": "phpcbf tests --exclude=PSR1.Methods.CamelCapsMethodName, Generic.Files.LineLength"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
